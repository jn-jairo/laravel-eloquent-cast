{
    "name": "jn-jairo/laravel-eloquent-cast",
    "description": "Cast for Laravel Eloquent.",
    "keywords": [
        "jn-jairo",
        "laravel-eloquent-cast"
    ],
    "homepage": "https://github.com/jn-jairo/laravel-eloquent-cast",
    "license": "MIT",
    "authors": [
        {
            "name": "Jairo Correa",
            "email": "jn.j41r0@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "illuminate/support": "^5.8|^6.0",
        "jn-jairo/laravel-cast": "^1.0"
    },
    "require-dev": {
        "moontoast/math": "^1.1",
        "orchestra/testbench": "^3.8|^4.0",
        "php-decimal/php-decimal": "^1.1",
        "phpunit/phpunit": "^8.3",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "JnJairo\\Laravel\\EloquentCast\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JnJairo\\Laravel\\EloquentCast\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit",
        "test-stable": "for version in 7.2 7.3 ; do if command -v php${version} > /dev/null 2>&1 ; then echo '\nPHP: '${version}'\n' && php${version} $(which composer) update --prefer-dist --no-interaction --prefer-stable > /dev/null 2>&1 && php${version} vendor/bin/phpunit ; fi ; done",
        "test-lowest": "for version in 7.2 7.3 ; do if command -v php${version} > /dev/null 2>&1 ; then echo '\nPHP: '${version}'\n' && php${version} $(which composer) update --prefer-dist --no-interaction --prefer-lowest --prefer-stable > /dev/null 2>&1 && php${version} vendor/bin/phpunit ; fi ; done",
        "code-style": "vendor/bin/phpcs -n src/ tests/ config/"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "JnJairo\\Laravel\\EloquentCast\\EloquentCastServiceProvider"
            ]
        }
    }
}
